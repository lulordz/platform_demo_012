@page
@model PlatformDemo.Pages.CustomersModel
@{
    ViewData["Title"] = "Customers";
}
<h1>Customer List</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Total Amount of Orders</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Orders.Sum(o => o.Amount)</td>
            </tr>
        }
    </tbody>
</table>
